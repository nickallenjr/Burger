<h1>Eat Dat Burger</h1>

<div class='image'>
</div>

<div class='box1' style='width:400px'>
	<ul>
		{{#each burgers}}
			{{#if devoured}}
				{{> burgers/burger-block devoured=false}}
			{{/if}}
		{{/each}}
	</ul>
</div>

<div class='box2' style='width:400px'>
	<ul>
		{{#each burgers}}
			{{#unless devoured}}
				{{> burgers/burger-block devoured=true}}
			{{/unless}}
		{{/each}}
	</ul>
</div>

<h1>Add A Burger</h1>

<form class="create-form">

  <div class="form-group">
    <label for="bu">Burger:</label>
    <input type="text" id="burg" name="name">
    <button class='addbtn' type="submit">Add Burger</button>
  </div>

</form>
